@model WestdalePharmacyApp.Models.Prescription

@{
    ViewData["Title"] = "Details";
}



<div>
    <h4>Prescription Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RefillAvailable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RefillAvailable)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimesRefill)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimesRefill)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageFile)
        </dt>
        <dd class="col-sm-10">

            @{
                var base64 = Convert.ToBase64String(Model.ImageFile);
                var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
            }
            <img src='@imgSrc' style="max-width:300px;max-height:300px" />


        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreationTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreationTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpecialInstruction)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SpecialInstruction)
        </dd>

    </dl>
</div>
<div>

        @{

            if (Model.Status.Equals("Completed") || Model.Status.Equals("Refill Requested") || Model.Status.Equals("In Process"))

            {
                
            }
            else
            {
                <a asp-action="Edit" asp-route-id="@Model.PrescriptionId" class="btn btn-info">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.PrescriptionId" class="btn btn-danger">Delete </a>
            }
        }

 
</div>
<br />
<div>
    
    <a asp-action="Index" class="btn btn-primary">Back</a>
</div>
